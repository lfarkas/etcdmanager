    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "electron": "^34.3.4",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "mocha": "^11.1.0",
    "sass": "^1.86.0",
    "sass-loader": "^10.5.2",
    "typescript": "^5.8.2",
    "vue-cli-plugin-electron-builder": "^2.1.1",
    "vue-template-compiler": "^2.7.16"
  },
