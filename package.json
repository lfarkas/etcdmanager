{
  "name": "etcd-manager",
  "version": "1.3.0",
  "description": "Multi-platform ETCD v3 client and GUI",
  "author": "Tamas Geschitz <tamas.geschitz@icellmobilsoft.hu>",
  "scripts": {
    "clean": "rm -rf dist dist_electron node_modules/.cache .cache",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "eslint --ext .ts,.tsx,.vue src/",
    "electron:build": "vue-cli-service electron:build",
    "electron:build:linux": "vue-cli-service electron:build  --linux AppImage tar.gz --x64",
    "electron:build:mac": "vue-cli-service electron:build --macos dmg --x64",
    "electron:build:win": "vue-cli-service electron:build  --windows nsis --x64 --ia32",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=public --flatten",
    "electron:publish:linux": "vue-cli-service electron:build  --linux AppImage tar.gz --x64 -p always",
    "electron:publish:mac": "vue-cli-service electron:build --macos dmg --x64 -p always",
    "electron:publish:win": "vue-cli-service electron:build  --windows nsis --x64 --ia32 -p always",
    "electron:serve": "vue-cli-service electron:serve",
    "prepare": "husky",
    "postinstall": "npx electron-builder install-app-deps",
    "postuninstall": "npx electron-builder install-app-deps",
    "test": "echo 'Tests disabled - migrate to Playwright'"
  },
  "main": "background.js",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@trodi/electron-splashscreen": "^1.0.2",
    "core-js": "^3.41.0",
    "electron-updater": "^6.6.1",
    "etcd3": "^1.1.2",
    "list-to-tree": "^2.2.3",
    "lodash-es": "^4.17.21",
    "markdown": "^0.5.0",
    "marked": "^15.0.7",
    "moment": "^2.30.1",
    "mousetrap": "^1.6.5",
    "protobufjs": "^7.4.0",
    "uuid": "^11.1.0",
    "vue": "^2.7.16",
    "vue-class-component": "^7.2.6",
    "vue-i18n": "^8.28.2",
    "vue-localstorage": "^0.6.2",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.6.5",
    "vuelidate": "^0.7.7",
    "vuetify": "^1.5.24",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/mousetrap": "^1.6.15",
    "@types/uuid": "^10.0.0",
    "@types/vuelidate": "^0.7.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
